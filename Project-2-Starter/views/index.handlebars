<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
        <h1>{{msg}}</h1>
        <h2>Create a new activity</h2>
        <form class="clearfix mb-4" action="POST">
          <div class="form-group">
            <label for="activity-text">Activity Text</label>
            <input type="text" id="activity-text" class="form-control" aria-describedby="activity-text" placeholder="Enter Activity Text">
          </div>
          <div class="form-group">
            <label for="activity-type">Activity Type</label>
            <textarea class="form-control" id="activity-type" aria-describedby="activity-type" placeholder="Enter Activity Type"></textarea>
          </div>
          <div class="form-group">
            <label for="activity-description">Activity Description</label>
            <textarea class="form-control" id="activity-description" aria-describedby="activity-description" placeholder="Enter Activity Description"></textarea>
          </div>
          <button id="submit" class="btn btn-primary float-right">Submit</button>
        </form>
        <h3>Full list of activities:</h3>
        <ul id="activity-list" class="list-group">
          {{#each activities}}
          <li data-id="{{this.id}}" class="list-group-item">
            <a href="activity/{{this.id}}">{{this.activity}}</a>
            <button class="btn btn-danger float-right delete">ｘ</button>
          </li>
          {{/each}}
        </ul>
        <br>
        <h3>Relax Activities:</h3>
        <ul id="relax-list" class="list-group">
          <li data-id="{{this.id}}" class="list-group-item">
            <a href="activity/{{this.id}}">{{this.activity}}</a>
            <button class="btn btn-danger float-right delete">ｘ</button>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>

